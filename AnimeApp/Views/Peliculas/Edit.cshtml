@model AnimeApp.Models.Pelicula

@{
    ViewData["Title"] = "Editar Película";
}

<div class="glass-container">
    <div class="glass-card">
        <h1 class="glass-title">
            <i class="fas fa-film"></i> @ViewData["Title"]
        </h1>

        <div class="glass-form-container">
            <form asp-action="Edit" class="glass-form">
                <div asp-validation-summary="ModelOnly" class="text-danger glass-validation"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group glass-form-group">
                    <label asp-for="Titulo" class="glass-label">
                        <i class="fas fa-heading"></i> Título
                    </label>
                    <input asp-for="Titulo" class="glass-input" />
                    <span asp-validation-for="Titulo" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="Resena" class="glass-label">
                        <i class="fas fa-align-left"></i> Reseña
                    </label>
                    <textarea asp-for="Resena" class="glass-input" rows="4"></textarea>
                    <span asp-validation-for="Resena" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="ImagenPortadaUrl" class="glass-label">
                        <i class="fas fa-image"></i> URL de la Portada
                    </label>
                    <input asp-for="ImagenPortadaUrl" class="glass-input" />
                    <span asp-validation-for="ImagenPortadaUrl" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="CodigoTrailer" class="glass-label">
                        <i class="fab fa-youtube"></i> Código del Trailer
                    </label>
                    <input asp-for="CodigoTrailer" class="glass-input" placeholder="Solo el código del video de YouTube" />
                    <span asp-validation-for="CodigoTrailer" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="GeneroId" class="glass-label">
                        <i class="fas fa-tag"></i> Género
                    </label>
                    <select asp-for="GeneroId" class="glass-input" asp-items="ViewBag.GeneroId">
                        <option value="">Seleccione un género</option>
                    </select>
                    <span asp-validation-for="GeneroId" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="PaisId" class="glass-label">
                        <i class="fas fa-globe"></i> País
                    </label>
                    <select asp-for="PaisId" class="glass-input" asp-items="ViewBag.PaisId">
                        <option value="">Seleccione un país</option>
                    </select>
                    <span asp-validation-for="PaisId" class="glass-validation"></span>
                </div>

                <div class="form-group glass-form-group">
                    <label asp-for="DirectorId" class="glass-label">
                        <i class="fas fa-user-tie"></i> Director
                    </label>
                    <select asp-for="DirectorId" class="glass-input" asp-items="ViewBag.DirectorId">
                        <option value="">Seleccione un director</option>
                    </select>
                    <span asp-validation-for="DirectorId" class="glass-validation"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-glass btn-lg">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-glass-outline btn-lg ml-3">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .glass-container {
        background: linear-gradient(135deg, #363a43, #4b4f58, #60646b, #818488);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        min-height: calc(100vh - 150px);
        padding: 20px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37), 0 0 20px rgba(255, 255, 255, 0.3);
        padding: 2rem;
        margin: 0 auto;
        max-width: 800px;
    }

    .glass-title {
        color: white;
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }

        .glass-title i {
            margin-right: 15px;
            color: #bbdefb;
        }

    .glass-form-container {
        max-width: 700px;
        margin: 0 auto;
    }

    .glass-form {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    }

    .glass-form-group {
        margin-bottom: 1.5rem;
    }

    .glass-label {
        color: white;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

        .glass-label i {
            margin-right: 10px;
            color: #bbdefb;
        }

    .glass-input,
    .glass-input select,
    .glass-input textarea {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        padding: 0.75rem 1rem;
        width: 100%;
        color: #363a43;
        transition: all 0.3s ease;
    }

        .glass-input:focus,
        .glass-input select:focus,
        .glass-input textarea:focus {
            background: white;
            box-shadow: 0 0 0 0.25rem rgba(187, 222, 251, 0.25);
            border-color: #bbdefb;
        }

    .glass-validation {
        color: #ffb74d;
        font-size: 0.9rem;
        margin-top: 0.25rem;
        display: block;
    }

    .btn-glass {
        background: rgba(54, 58, 67, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 10px;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-glass:hover {
            background: rgba(97, 100, 107, 0.9);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }

    .btn-glass-outline {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: white;
        border-radius: 10px;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-glass-outline:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@media (max-width: 768px) {
        .glass-card {
            padding: 1.5rem;
        }

        .glass-title {
            font-size: 2rem;
        }

        .glass-form {
            padding: 1.5rem;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}