<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimeApp.styles.css" asp-append-version="true" />
    <style>
        /* Estilos personalizados */
        .navbar {
            background: rgba(54, 58, 67, 0.8) !important;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37), 0 0 20px rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            margin: 15px auto;
            width: 95%;
        }

        .footer {
            background: rgba(54, 58, 67, 0.8) !important;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37), 0 0 20px rgba(255, 255, 255, 0.3);
            color: white !important;
            border-radius: 20px 20px 0 0;
            margin-top: 20px;
        }

            .footer a {
                color: #bbdefb !important;
                text-decoration: none;
            }

                .footer a:hover {
                    color: white !important;
                    text-decoration: underline;
                }

        .nav-link {
            color: white !important;
            transition: all 0.3s ease;
            margin: 0 5px;
            border-radius: 10px;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        body {
            background: linear-gradient(135deg, #363a43, #4b4f58, #60646b, #818488);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            min-height: 100vh;
        }

        .container {
            padding-top: 20px;
        }

        @@keyframes gradient {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Estilo para el partial de login */
        .nav-item .btn-outline-light {
            border-color: white;
            color: white;
            margin-left: 10px;
            border-radius: 10px;
        }

            .nav-item .btn-outline-light:hover {
                color: #363a43 !important;
                background-color: white;
            }

        .nav-item .btn-primary {
            background-color: rgba(54, 58, 67, 0.8);
            border-color: white;
            border-radius: 10px;
            color: white;
        }

            .nav-item .btn-primary:hover {
                background-color: rgba(97, 100, 107, 0.9);
                color: white;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnimeApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Directores" asp-action="Index">Directores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Generos" asp-action="Index">Géneros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Paises" asp-action="Index">Países</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Actores" asp-action="Index">Actores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Peliculas" asp-action="Index">Películas</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - AnimeApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>